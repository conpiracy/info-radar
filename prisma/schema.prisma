datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Define your models here
model ScrapedData {
  id        String   @id @default(uuid())
  title     String
  url       String   @unique
  date      DateTime
  content   Json?
  validated Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("scraped_data")
}
