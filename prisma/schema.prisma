generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ScrapedData {
  id        String   @id @default(uuid())
  title     String
  url       String   @unique
  date      DateTime
  content   String   @db.Text // Changed from Json to String to store serialized JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("scraped_data")
}
